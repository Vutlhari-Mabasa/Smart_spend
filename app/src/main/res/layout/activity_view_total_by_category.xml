<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#041E35">

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Spent by Category"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <!-- Date Picker (Start Date) -->
    <Button
        android:id="@+id/btnSelectStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Start Date"
        android:background="#374151"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <!-- Date Picker (End Date) -->
    <Button
        android:id="@+id/btnSelectEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select End Date"
        android:background="#374151"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Button to View Total by Category -->
    <Button
        android:id="@+id/btnViewTotalByCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Total by Category"
        android:background="#374151"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView for displaying category totals -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoryTotal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"/>
</LinearLayout>
