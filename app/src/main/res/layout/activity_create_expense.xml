<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041E35">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Expense"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="16dp" />

        <!-- Amount Input -->
        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Date Picker -->
        <Button
            android:id="@+id/btnSelectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#374151"
            android:backgroundTint="#4B0082"
            android:text="Select Date"
            android:textColor="#FFFFFF" />

        <!-- Display Selected Date -->
        <TextView
            android:id="@+id/txtSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Selected Date: -"
            android:layout_marginTop="4dp" />

        <!-- Start Time Picker -->
        <Button
            android:id="@+id/btnStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:background="#4B0082"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- Display Start Time -->
        <TextView
            android:id="@+id/txtStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Start Time: -"
            android:layout_marginTop="4dp" />

        <!-- End Time Picker -->
        <Button
            android:id="@+id/btnEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:background="#0097A7"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- Display End Time -->
        <TextView
            android:id="@+id/txtEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="End Time: -"
            android:layout_marginTop="4dp" />

        <!-- Description (as comment block) -->
        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#374151"
            android:hint="/* Enter your description here */"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Photo Preview -->
        <ImageView
            android:id="@+id/expenseImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Expense Photo"
            android:scaleType="centerCrop"
            android:background="#374151" />

        <!-- Add Photo Button -->
        <Button
            android:id="@+id/btnAddPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo"
            android:background="#0097A7"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Expense"
            android:background="#0097A7"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
